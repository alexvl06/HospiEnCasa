<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospiEnCasa</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
body {
        background-image: url("img/Registro.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        font-size: 1.2rem;
        font-family: sans-serif;
        line-height: 1.6em;
        text-decoration: none;
    }
    .footer {
        background: darkgray;
        padding: 0rem 0;
        text-align: center;
        margin-top: 9rem;
        margin-left: 0px;

    }

    header {
        background-color: cornflowerblue !important
    }

    img {
        margin: 1rem;
    }

    header nav ul li span {
        margin-right: 10px;

    }

    .nav2 {
        margin-top: 20px;
        position: relative;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
        overflow: hidden;
    }

    nav>ul>li {
        float: left;
    }

    nav ul li a{
        text-decoration: none;
        color: #fff;
        display: block;
        padding: 10px 20px;
    }

    nav ul li a:hover {
        background: #3669a3;
        cursor: pointer;
    }

    nav>ul>li:hover div {
        display: table;
    }

    /*Submenu*/
    nav ul li div {
        width: 530px;
        position: absolute;
        left: 0;
        background: #ccc;
        box-sizing: border-box;
        display: none;
    }

    nav ul li div ul {
        width: 20%;
        display: table-cell;
        border-right: 1px solid rgba(255, 255, 255, .5);
        box-sizing: border-box;
    }

    nav ul li div ul:last-child {
        border: none;
    }

    nav ul li div ul li a {
        color: #000;
    }

    nav ul li div ul li a:hover {
        color: #fff;
    }
    </style>
</head>

<body>

    <header>

        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index"><img src="../img/HC.png" alt="Logo" height="80px"></a>
                <nav class="nav2">
                    <ul style="color:white">
                        <li>
                            <a class="nav-link"><span class=""></span>Pacientes</a>
                            <div>
                                <ul>
                                    <li><a class="nav-link" asp-page="/Formularios/RegPacientes">Nuevo Paciente</a></li>
                                    <li><a class="nav-link" asp-page="/Formularios/ListPacientes">Lista de Pacientes</a></li>                                    
                                </ul>
                            </div>
                        </li>
                        <li><a class="nav-link"><span class=""></span>Médicos</a>
                        <div>
                            <ul>
                                <li><a class="nav-link" asp-page="/Formularios/RegMedicos">Nuevo Médico</a></li>
                                <li><a class="nav-link" asp-page="/Formularios/ListMedicos">Lista de Médicos</a></li>
                            </ul>
                        </div>
                    </li>
                    <li><a class="nav-link"><span class=""></span>Familiares</a>
                        <div>
                            <ul>
                                <li><a class="nav-link" asp-page="/Formularios/RegFamiliares">Nuevo Familiar</a></li>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li><a class="nav-link"><span class=""></span>Signos Vitales</a>
                        <div>
                            <ul>
                                <li><a class="nav-link" asp-page="/Formularios/RegSignosVitales">Registrar Signos Vitales</a></li>
                            </ul>
                        </div>
                    </li>
                    </ul>
                </nav>
            </div>
        </nav>



    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - RevoluTIC 5.0
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)


</body>

</html>
