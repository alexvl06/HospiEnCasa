@page
@model HospiEnCasa.App.Frontend.Pages.DetailPacientesModel
@{
    ViewData["Title"] = "Det. Paciente";
}
<head>
   <link rel="stylesheet" href="~/css/formStyle.css">
 </head>
<body>
    
<h1>DETALLES PACIENTE</h1>
    <form action="" class="formulario" method="get">
        <label for="idPaciente" class="formulario__label">Id del Paciente:</label>
        <input class="formulario__input" type="text" id="idPaciente" required pattern="[0-9]{1,10}"
            title="Ingrese números. No se permite otro tipo de carácteres." placeholder="123456789"
            name="idPaciente"  asp-for="IdPaciente">
        <input type="submit" value="Consultar" class="formulario__btn">
    </form>
    @if(Model.paciente != null){
        <form method="post" action="">
        <table>
        <tr>
            <th>Nombre:</th>
            <td>
                <input class="formulario__input" type="text" asp-for="paciente.Nombre" readonly>
            </td>
        </tr>
        <tr>
            <th>Apellidos:</th>
            <td>
                <input class="formulario__input" type="text" asp-for="paciente.Apellidos" readonly>
            </td>
        </tr>
        <tr>
            <th>Género:</th>
            <td><input class="formulario__input" type="text" asp-for="paciente.Genero" readonly></td>
        </tr>
        <tr>
            <th>Teléfono:</th>
            <td><input class="formulario__input" type="text" id="phonenumber" required pattern="[0-9]{10}"
                asp-for="paciente.NumeroTelefono"></td>
        </tr>
        <tr>
            <th>Fecha de Nacimiento:</th>
            <td><input class="formulario__input" type="text" asp-for="paciente.FechaNacimiento" readonly></td>
        </tr>
        <tr>
            <th>Dirección:</th>
            <td>
                <input class="formulario__input" type="text" id="address" required asp-for="paciente.Direccion">
            </td>
        </tr>
        <tr>
            <th>Ciudad:</th>
            <td><input class="formulario__input" type="text" asp-for="paciente.Ciudad" readonly></td>
        </tr>
        <tr>
            <th>Latitud:</th>
            <td><input class="formulario__input" type="text" asp-for="paciente.Latitud" readonly></td>
        </tr>
        <tr>
            <th>Longitud:</th>
            <td><input class="formulario__input" type="text" asp-for="paciente.Longitud" readonly></td>
        </tr>
    </table>
    <input type="hidden" value="@Model.paciente.Id" asp-for="paciente.Id">
    <button class="formulario__btn" type="submit">Actualizar</button>
    </form>
    }

</body>