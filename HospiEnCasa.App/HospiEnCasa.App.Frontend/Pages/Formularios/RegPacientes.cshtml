@page
@model HospiEnCasa.App.Frontend.Pages.RegPacientesModel
@{
    ViewData["Title"] = "Reg. Pacientes";
}
<head>
   <link rel="stylesheet" href="~/css/registroFamiliar.css">
</head>
<body>

    <h1>REGISTRAR PACIENTES</h1>
    <form action="" class="formulario">
        <label for="id" class="formulario__label">
            <span>Número de identificación</span>
            <input class="formulario__input" type="text" name="id" id="id" required pattern="[0-9]{5,10}"
                title="Ingrese de 5 a 10 dígitos. No se permite otro tipo de carácteres." placeholder="Escribe el Id"/>
        </label>
        <label for="firstname" class="formulario__label">
            <span>Nombres</span>
            <input class="formulario__input" type="text" name="firstname" id="firstname" required pattern="^[^ ][a-zA-ZÀ-ÿ ]{1,100}[^ ]$"
                title="No se permiten carácteres que no sean letras o espacios. También esta prohibido iniciar o acabar con espacios" placeholder="Escribe nombre" />
        </label>
        <label for="lastname" class="formulario__label">
            <span>Apellidos</span>
            <input class="formulario__input" type="text" name="lastname" id="lastname" required pattern="^[^ ][a-zA-ZÀ-ÿ ]{1,100}[^ ]$"
                title="No se permiten carácteres que no sean letras o espacios. También esta prohibido iniciar o acabar con espacios" placeholder="Escribe Apellidos" />
        </label>
        <label for="phonenumber" class="formulario__label">
            <span>Número de teléfono</span>
            <input class="formulario__input" type="text" name="phonenumber" id="phonenumber" required pattern="[0-9]{10}"
                title="Ingresa 10 dígitos, ni más ni menos. No se permiten tampoco otro tipo de carácteres." placeholder="123456789"/>
        </label>
        <label for="genre" class="formulario__label">
            <fieldset>
                <legend>Género</legend>
                <label for="male">
                    <input type="radio" name="genre" id="male" />
                    <span>Masculino</span>
                </label>
                <label for="female">
                    <input type="radio" name="genre" id="female" />
                    <span>Femenino</span>
                </label>
                <label for="other">
                    <input type="radio" name="genre" id="other" />
                    <span>Otro</span>
                </label>
            </fieldset>
        </label>
        <label for="address" class="formulario__label">
            <span>Dirección</span>
            <input class="formulario__input" type="text" name="address" id="address" required placeholder="Escribe Dirección"/>
        </label>
        <label for="city" class="formulario__label">
            <span>Ciudad</span>
            <input class="formulario__input" type="text" name="city" id="city" required pattern="^[^
          ][a-zA-ZÀ-ÿ ]{1,100}[^ ]$" title="No se permiten carácteres que no
          sean letras o espacios. También esta prohibido iniciar o acabar con
          espacios" placeholder="Escribe ciudad"/>
        </label>
        <label for="birthdate" class="formulario__label">
            <span>Fecha de nacimiento</span>
            <input class="formulario__input" type="date" name="birthdate" id="birthdate" required />
        </label>
        <label for="lat" class="formulario__label">
            <span>Latitud</span>
            <input class="formulario__input" type="text" name="lat" id="lat" pattern="-?\d+([,.]\d+)"
                title="Solo se admite números separados por coma o punto" placeholder="Escribe latitud"/>
        </label>
        <label for="long" class="formulario__label">
            <span>Longitud</span>
            <input class="formulario__input" type="text" name="long" id="long" pattern="-?\d+([,.]\d+)"
                title="Solo se admite números separados por coma." placeholder="Escribe longitud"/>
        </label>
        <button class="formulario__btn"type="submit">Crear</button>
    </form>
</body>
